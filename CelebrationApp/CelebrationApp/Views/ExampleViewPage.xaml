<Page
    x:Class="CelebrationApp.Views.ExampleViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
        <DatePicker MinYear="{x:Bind ViewModel.arrivalDatePicker.MinYear}" 
                    MaxYear="{x:Bind ViewModel.arrivalDatePicker.MaxYear}"
                    SelectedDateChanged="{x:Bind ViewModel.TestdateChanged}" />
        
        <TextBlock Text="{x:Bind ViewModel.TestTXT, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</Page>
